<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/pup"
    android:orientation="vertical"
    tools:context=".MainActivitypop">




 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="48dp"
            android:layout_marginRight="30dp"
            android:text="Счет пополнения:"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="48dp"
            android:text="Баланс:"
            android:textColor="@color/black"
            android:textSize="17dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/balance"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:textColor="@color/black"
        android:inputType="number"
        android:textSize="17dp" />

    <LinearLayout
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="83dp">


        <TextView
            android:id="@+id/numberCard"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="165dp"
            android:textColor="@color/black"
            android:inputType="number"
            android:textSize="17dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/UserName"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="165dp"
            android:textColor="@color/black"
            android:inputType="number"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/popolnite"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:hint="@string/пополнение"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="17dp" />

        <Button
            android:id="@+id/press"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:text="@string/Внести" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="60dp">

        <Button
            android:id="@+id/button1"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="submitOrder1"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="submitOrder2"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="submitOrder3"
            android:text="3" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <Button
                android:id="@+id/button4"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="submitOrder4"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:onClick="submitOrder5"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:onClick="submitOrder6"
                android:text="6" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp">

        <Button
            android:id="@+id/button7"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="submitOrder7"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="submitOrder8"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="submitOrder9"
            android:text="9" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="60dp">

        <Button
            android:id="@+id/button0"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:onClick="submitOrder0"
            android:text="0" />

        <Button
            android:id="@+id/ClearButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:onClick="Clear"
            android:text="Delete" />

    </LinearLayout>
</LinearLayout>