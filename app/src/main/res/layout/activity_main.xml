<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pup"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="Введите пароль"
        android:textColor="@color/black">

    </TextView>

    <EditText
        android:id="@+id/textPassword"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="textPassword"
        android:maxLength="5" />

    <Button
        android:id="@+id/search"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pup"
        android:onClick="submitOrder2"
        android:text="Enter" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="@color/teal_200"
            android:onClick="submitOrder1"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#EB3306F8"
            android:onClick="submitOrder2"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#EB3306F8"
            android:onClick="submitOrder3"
            android:text="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#EB3306F8"
            android:onClick="submitOrder4"
            android:orientation="horizontal"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#EB3306F8"
            android:onClick="submitOrder5"
            android:orientation="horizontal"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#EB3306F8"
            android:onClick="submitOrder6"
            android:text="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#EB3306F8"
            android:onClick="submitOrder7"
            android:orientation="horizontal"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#EB3306F8"
            android:onClick="submitOrder8"
            android:orientation="horizontal"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#EB3306F8"
            android:onClick="submitOrder9"
            android:text="9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_marginLeft="45dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#EB3306F8"
            android:onClick="submitOrder0"
            android:text="0" />

        <Button
            android:id="@+id/ClearButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#EB3306F8"
            android:onClick="submitOrder2"
            android:text="delete" />
    </LinearLayout>


</LinearLayout>